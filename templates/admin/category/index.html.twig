{% extends 'admin/layout.html.twig' %}

{% block title %}
	Catégories |
	{{parent()}}
{% endblock %}

{% block content %}

	<section class="text-center container">
		<div class="row">
			<div class="col-lg-6 col-md-8 mx-auto">
				<h1 class="fw-light">
					Catégories
					<small class="fs-5">
						<a href="{{ path('admin_category_add') }}">Nouvelle catégorie</a>
					</small>
				</h1>
			</div>
		</div>
	</section>

	<div class="container">
		<table class="table table-hover">
			<thead>
				<tr>
					<td>#</td>
					<td>Nom</td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{category.id}}</td>
						<td>{{category.name}}</td>
						<td>
							<a href="{{ path('admin_category_show', {id:category.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
						</td>
						<td>
							<a href="{{ path('admin_category_edit', {id:category.id}) }}" class="btn btn-sm btn-outline-secondary">Editer</a>
						</td>
						<td>
							<a href="{{ path('admin_category_delete', {id:category.id, token:csrf_token('delete-item')}) }}" class="btn btn-sm btn-outline-secondary">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
